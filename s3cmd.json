{
  "jpsVersion": "0.9",
  "jpsType": "update",
  "build": "20190424",
  "targetNodes": {
    "nodeGroup": "storage"
  },
  "id": "s3cmd-cli",
  "name": "s3cmd-cli to storage container beta",
  "version": "latest",
  "homepage": "https://s3tools.org/s3cmd",
  "categories": [
    "apps/dev-and-admin-tools"
  ],
  "description": {
    "text": "s3cmd-cli to your storage container."
  },
    "onInstall": {
      "executeShellCommands": [
        {
          "nodeGroup": "storage",
          "commands": [
            "yum install -y s3cmd"
          ],
          "user": "root"
        }
      ]
  },
  "onUninstall": {
      "executeShellCommands": [
        {
          "nodeGroup": "storage",
          "commands": [
            "yum remove -y s3cmd"
          ],
          "user": "root"
        }
      ]
  },
  "buttons": [{
    "confirmText": "Do you want to update s3cmd-cli on your storage container",
    "loadingText": "Updating...",
    "action": "updatenow",
    "caption": "Update Now",
    "successText": "s3cmd-cli has been successfully updated!"
  }],
  "actions": {
    "updatenow": {
      "executeShellCommands": [
        {
          "nodeGroup": "storage",
          "commands": [
            "yum makecache && yum update s3cmd"
          ],
          "user": "root"
        }
      ]
    }
  },
  "success": {
      "text": "Addon was applied to ${env.url}",
      "email": "Addon was applied to ${env.url}"
  }  
}
